<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- Adjust the size of the ring by changing the width and height -->
    <stroke
        android:width="@dimen/_3sdp"
        android:color="#2196F3" />
    <!-- Adjust the size of the ring -->
    <size
        android:width="@dimen/_30sdp"
        android:height="@dimen/_30sdp"/>

    <!-- Add internal padding -->
    <padding
        android:left="@dimen/_5sdp"
        android:top="@dimen/_5sdp"
        android:right="@dimen/_5sdp"
        android:bottom="@dimen/_5sdp" />
</shape>