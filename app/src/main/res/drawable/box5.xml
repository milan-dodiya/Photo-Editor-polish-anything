<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#AE0D64"
                android:centerColor="#DE3030"
                android:endColor="#CC672E"
                android:angle="270" /> <!-- 270 for vertical gradient -->
            <corners android:radius="@dimen/_10sdp"/>
            <size
                android:width="@dimen/_50sdp"
                android:height="@dimen/_20sdp"/>
        </shape>
    </item>
</layer-list>
