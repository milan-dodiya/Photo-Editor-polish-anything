<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PhotoEditorPolishAnything" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
    </style>

    <!--bottom sheet dialog -->
    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Model</item>
    </style>

    <style name="MyCustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Model" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- tab layout-->
    <style name="CustomTabTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">85%</item> <!-- Adjust width as a percentage -->
        <item name="android:windowMinWidthMinor">85%</item>
    </style>
    <!--bottom sheet dialog -->


    <style name="CustomRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/blue</item>
        <!-- Adjust other attributes as needed -->
    </style>



    <!--Tabs Layout-->

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/tabs_background_selector</item>
        <item name="tabTextAppearance">@style/CustomTabTextStyle</item>
        <item name="tabIndicator">@drawable/tabs_indicator</item>
    </style>


    <!--Custom seekbar-->
    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/custom_thumb</item>
        <item name="android:minHeight">@dimen/_5sdp</item>
        <item name="android:maxHeight">@dimen/_5sdp</item>
    </style>

    <!-- Full-screen BottomSheet style -->
    <style name="FullScreenBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="behavior_peekHeight">0dp</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#000000</item> <!-- Set your desired color here -->
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_hideable">false</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@drawable/tabs_text_color_selector</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:background">@drawable/tabs_background_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Custom style for SearchView text -->
    <style name="SearchViewTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">10sp</item> <!-- Change this value to desired size -->
        <item name="android:textColor">@android:color/black</item> <!-- Optional: Change text color -->
    </style>

    <style name="Theme.PhotoEditorPolishAnything" parent="Base.Theme.PhotoEditorPolishAnything" />
</resources>