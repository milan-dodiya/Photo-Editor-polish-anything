<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".SubscriptionsActivity">


    <LinearLayout
        android:id="@+id/lnrSubscriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgback"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/txtSubscriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="Subscriptions"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/candy_machine"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/txtDiscoversubscriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover subscriptions"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtSubscriptionsCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can sign up for subscriptions in your favourite \napps and games and manage them in Google Play"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>
</LinearLayout>