<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".EditActivity">

    <TextView
        android:id="@+id/txtOpen"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Open"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"/>

    <FrameLayout
        android:id="@+id/imgEditSelectImageContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_25sdp">

        <ImageView
            android:id="@+id/imgEditSelectImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/box4"
            android:backgroundTint="@color/black"
            android:scaleType="fitCenter"/>

        <!--        <FrameLayout-->
        <!--            android:id="@+id/templateContainer"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:visibility="gone">-->

        <!-- Template Image -->
        <ImageView
            android:id="@+id/templateImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:layout_gravity="center"
            android:visibility="gone"/>
        
        <!--        </FrameLayout>-->
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box9"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/box10"
                    android:backgroundTint="#D9D9D9"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/add"/>

                    <TextView
                        android:id="@+id/txtMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:text="More"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="#454545"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEditOriginal"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectImages"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtOriginal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Original"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEditBright"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectBright"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtBright"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Bright"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnrEditStory"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectStory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtStory"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Story"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEditNatural"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectNatural"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtNatural"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Natural"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEditWarm"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectWarm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtWarm"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Warm"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEditDew"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectDew"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtDew"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Dew"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEditGold"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectGold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtGold"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Gold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEditLomo"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectLomo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtLomo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Lomo"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEditPink"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/box10"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEditSelectPink"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/exp1"/>

                        <TextView
                            android:id="@+id/txtPink"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Pink"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="#661D1D1D"
                            android:layout_gravity="bottom"
                            android:textSize="@dimen/_8ssp"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#4DFFFFFF" />


        <LinearLayout
            android:id="@+id/lnrGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/lnrStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/box4"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onButtonClick"
                android:backgroundTint="@color/black"
                tools:ignore="OnClick">

                <TextView
                    android:id="@+id/txtStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Styles"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrTools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/box4"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onButtonClick"
                android:backgroundTint="@color/black"
                tools:ignore="OnClick">

                <TextView
                    android:id="@+id/txtTools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tools"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrExport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/box4"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onButtonClick"
                android:backgroundTint="@color/black"
                tools:ignore="OnClick">

                <TextView
                    android:id="@+id/txtExport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Export"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>